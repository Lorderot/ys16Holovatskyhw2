<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://www.springframework.org/schema/context
                           http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="Repository"/>

    <bean class="Infrastructure.BenchmarkPostProcessor" />

    <bean class = "Domain.Pizza"
          name="pizza1">
        <constructor-arg index="0" value="0" />
        <constructor-arg index="1" value="Margo"/>
        <property name="price" value="120.5"/>
        <property name="type" value="CHEESE"/>
    </bean>

    <bean class = "Domain.Pizza"
          name="pizza2">
        <constructor-arg index="0" value="1" />
        <constructor-arg index="1" value="Meat"/>
        <property name="price" value="125.0"/>
        <property name="type" value="MEAT"/>
    </bean>

    <bean class = "Domain.Pizza"
          name="pizza3">
        <constructor-arg index="0" value="2" />
        <constructor-arg index="1" value="PineApple"/>
        <property name="price" value="140.3"/>
        <property name="type" value="PINEAPPLE"/>
    </bean>

    <bean name = "pizzaRepository"
          class = "Repository.InMemPizzaRepository">
        <property name="pizzas">
            <list>
                <ref bean="pizza1"/>
                <ref bean="pizza2"/>
                <ref bean="pizza3"/>
            </list>
        </property>
    </bean>

    <bean name="orderRepository"
          class="Repository.InMemOrderRepository">
        <property name="orders">
            <list>
                <bean class="Domain.Order">
                    <constructor-arg index="0">
                        <bean name="customer"
                              class="Domain.Customer">
                            <constructor-arg index="0" value="1"/>
                            <constructor-arg index="1" value="Kolia"/>
                            <constructor-arg index="2" value="Kovalsky lane 5"/>
                        </bean>
                    </constructor-arg>
                    <constructor-arg index="1">
                        <list>
                            <ref bean="pizza1"/>
                            <ref bean="pizza2"/>
                        </list>
                    </constructor-arg>
                </bean>
            </list>
        </property>
    </bean>
</beans>