<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://www.springframework.org/schema/context
                           http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="Repository"/>

    <bean class="Infrastructure.BenchmarkPostProcessor" />

    <bean name = "pizzaRepository"
          class = "Repository.InMemPizzaRepository"
          init-method="init">
        <property name="pizzas">
            <list>
                <bean class = "Domain.Pizza">
                    <constructor-arg index="0" value="0" />
                    <constructor-arg index="1" value="Margo"/>
                    <property name="price" value="120.5"/>
                    <property name="type" value="CHEESE"/>
                </bean>
                <bean class = "Domain.Pizza">
                    <constructor-arg index="0" value="1" />
                    <constructor-arg index="1" value="Meat"/>
                    <property name="price" value="125.0"/>
                    <property name="type" value="MEAT"/>
                </bean>
                <bean class = "Domain.Pizza">
                    <constructor-arg index="0" value="2" />
                    <constructor-arg index="1" value="PineApple"/>
                    <property name="price" value="140.3"/>
                    <property name="type" value="PINEAPPLE"/>
                </bean>
            </list>
        </property>
    </bean>

</beans>